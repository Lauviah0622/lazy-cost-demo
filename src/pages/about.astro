---
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';
import { getEntry } from 'astro:content';

const { data } = await getEntry('about', 'data');

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Caos Image',
    }}
  >
    <Fragment slot="title">
      {data.title}
    </Fragment>

    <Fragment slot="subtitle">
      {data.intro}
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats title="Statistics about us" stats={data.stat} />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title={data.achievements.title}
    subtitle={data.achievements.desc}
    isReversed={true}
    callToAction={{
      text: 'See more',
      href: '/',
    }}
    items={data.achievements.items.map((i) => ({
      ...i,
      icon: `tabler:${i.icon}`,
      description: i.desc,
    }))}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="地址"
    tagline="Find us"
    columns={1}
    items={[
      {
        title: data.loc.title,
        description: data.loc.desc,
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Technical Support"
    tagline="Contact us"
    columns={2}
    items={data.contact.map((i) => ({
      title: i.title,
      description: i.desc,
    }))}
  />
</Layout>
